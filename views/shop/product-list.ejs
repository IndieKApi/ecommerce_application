<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(products.length > 0) { %>
        <div class="grid">
            
            <% for(let prod of products) { %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="<product__title>"> <%= prod.title %> </h1>
                    </header>
                    <div class="card__image">
                        <img src="<%= prod.imageUrl %>" alt = "<%= prod.title %>" style="width: 100px; height: 100px;" alt="A Book">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">$ <%= prod.price %></h2>
                        <p class="product__description"><%= prod.description %></p>
                    </div>
                    <div class="card__actions">
                        <% if(isAuthenticated) { %>
                        <%- include('../includes/add-to-cart.ejs',{product: prod}) %>
                        <% } %>
                    </div>
                </article>
            
            <% } %>    <!-- End loop -->
        </div>
        <!-- Else if there are no products -->
        <%- include('../includes/pagination.ejs') %>
        <% }  else  { %>

        
        <h1>No Products</h1>

        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>